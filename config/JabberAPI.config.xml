<?xml version="1.0" encoding="utf-8"?>
<!-- a list of all exposed jabber API interface. Currently provider is a function registered on the jabber_client instance. 
-->
<JabberAPI>
  <jabber_services>
    <service url="ping" shortname="p" handler="OnPing" provider="event"/>
    <service url="echo" shortname="e" handler="OnEcho" provider="event"/>
    <service url="GetPlayerPos" shortname="playerpos" handler="GetPlayerPos" provider="event"/>
  </jabber_services>
</JabberAPI>